package day14;

import java.io.*;

public class Day14_02 {

	public static void printTex() {
		System.out.println("가위 바위 보 게임! v1.1");
		System.out.println("====================");
	}
	
	public static int inputData() 
	throws IOException{
		System.out.println("1 가위\t2 바위\t3보자기");
			int input = System.in.read()-'0';
			System.in.skip(2);
			if (!(input>=0&&input<=3)) {
				System.out.println("잘못입력했어요");
				System.exit(0);
			}
			return input;
	}
	
	public static String nameNum(int input) {

		String user;
		switch(input) {
		case 1: user = "가위"; break;
		case 2: user = "바위"; break;
		default: user = "보자기"; 
		}
		return user;
	}
	
	public static boolean winLog(int input, int com, String user, String com_s) {
		
		if ((input-com)==0) {// 비김
			System.out.println("사용자:"+user+"\t 컴퓨터:"+com_s);
			System.out.println("비겼어요 한 번 더!");
			return true;
		}else if ((input-com+2)%3==0) {// 이김
			System.out.println("사용자:"+user+"\t 컴퓨터:"+com_s);
			System.out.println("승리!");
			return false;
		}else {// 짐
			System.out.println("사용자:"+user+"\t 컴퓨터:"+com_s);
			System.out.println("패배!");
			return false;
		}	
	}
	
	public static void main(String[] args) 
	throws IOException{
		// 가위바위보 게임
		printTex();
		boolean win = true;
		while(win == true) {
			int input = inputData();
			String user = nameNum(input);
			int com = (int) (Math.random()*3+1);
			String com_s = nameNum(com);
			win = winLog(input, com, user, com_s);
		}
	}
}
