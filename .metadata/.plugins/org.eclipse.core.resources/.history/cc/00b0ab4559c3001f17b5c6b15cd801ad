package day08;

import java.io.*;
public class Day08quz {
	
	public static void topSugar() {
		System.out.println("*****************");
	}


	public static void main(String[] args) throws IOException {
		topSugar();
		for (int j = 1; j <= 5; j++) {
			for (int i = 1; i <= 7; i++) {
				if (j==1) {// 케이크 뚜껑 출력부
					System.out.print(" _");
				}
				else if(j>1&&j<5) {//케이크 기둥 출력부
					if(i==1) {
						System.out.print("|             |");
					}
					continue;
				}
				
			}
			System.out.println();
			if(j==4) {//케이크 바닥 출력부
				System.out.println("-_-_-_-_-_-_-_-");
			}
		}
	}
}

