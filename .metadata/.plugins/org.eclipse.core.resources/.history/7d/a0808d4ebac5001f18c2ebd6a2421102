package test;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner input=new Scanner(System.in);
		
		int A = input.nextInt();
		int B = input.nextInt();
		
		int arr[] = new int[A];
		int temp[] = new int[A];
		
		for (int i = 0; i < A; i++) {
			arr[i]=i+1;
			temp[i] = arr[i];
		}
		
		for (int i = 0; i<B; i++) {
			int C = input.nextInt();
			int D = input.nextInt();
			int k = D-1;
			for (int j = C-1; j < D; j++) {
				temp[j] = arr[k];
				k--;
			}
			for (int p = 0; p < A; p++) {
				arr[p] = temp[p];
			}
			
		}
		
		for (int i = 0; i < A; i++) {
			System.out.print(arr[i]);
		}
	}
}