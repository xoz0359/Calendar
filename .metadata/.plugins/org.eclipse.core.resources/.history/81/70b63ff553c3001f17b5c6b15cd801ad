package day13;

import java.io.*;

public class Day13_07 {

	public static int Cal(int num1, int num2, char input) {
		
		if (input=='+') {
			return(num1=num2);
		}else if (input=='-'){
			return(num1-num2);
		}else if (input=='*') {
			return(num1*num2);
		}else if (input=='/')
			return(num1/num2);
		else {
			return(-1);
		}
	}
	
	public static void main(String[] args) 
	throws IOException{
		// 사용자로부터 두 개의 수와 연산자를 입력 받아 계산하는 사칙계산기 프로그램 만들기
		// 출력 결과
		// 첫 번째 수:
		// 두 번째 수:
		// 연산자(+,-,*,/):
		// 계산은 Cal
		// 다시 출력은 main
		// 3+5=8
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		System.out.println("첫 번째 수:");
		int num1 = Integer.parseInt(br.readLine());
		System.out.println("두 번째 수:");
		int num2 = Integer.parseInt(br.readLine());
		System.out.println("연산자(+,-,*,/;");
		char input = (char)System.in.read();
		System.out.println(input);
		int cal_num = Cal(num1, num2, input);
		
		System.out.println(num1+(char)input+num2+"="+cal_num);
	}

}
